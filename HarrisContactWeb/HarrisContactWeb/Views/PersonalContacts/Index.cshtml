@model IEnumerable<HarrisContactWeb.Models.PersonalContact>

@{
    ViewData["Title"] = "Index";
}

<h1>Personal Contacts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.personalPostCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.personalPostCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
